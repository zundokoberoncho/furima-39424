        <span class="indispensable">必須</span>
      </div>
      <div class="input-name-wrap">
        <%= f.text_area :last_name, class:"input-name", id:"last-name", placeholder:"例) 山田", autofocus: true %>
        <%= f.text_area :first_name, class:"input-name", id:"first-name", placeholder:"例) 陸太郎", autofocus: true %>
